<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="30dp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/bubble_sort_app"
        android:textStyle="bold"
        android:textSize="50sp"
        android:textAlignment="center"
        android:paddingVertical="20pt"
        />

    <EditText
        android:id="@+id/valor1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingrese valor 1"
        android:paddingVertical="14dp"
        android:textAlignment="center"
        />

    <EditText
        android:id="@+id/valor2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingrese valor 2"
        android:paddingVertical="14dp"
        android:textAlignment="center"
        />

    <EditText
        android:id="@+id/valor3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingrese valor 3"
        android:paddingVertical="14dp"
        android:textAlignment="center"
        />

    <EditText
        android:id="@+id/valor4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingrese valor 4"
        android:paddingVertical="14dp"
        android:textAlignment="center"
        />

    <EditText
        android:id="@+id/valor5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingrese valor 5"
        android:paddingVertical="14dp"
        android:textAlignment="center"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginVertical="20dp"
        >
        <Button
            android:id="@+id/btnOrdAsc"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="ORDENAR ASC."
            android:layout_marginHorizontal="2dp"
            />
        <Button
            android:id="@+id/btnOrdDesc"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="ORDENAR DESC."
            android:layout_marginHorizontal="2dp"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/tvResultado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Resultado:&#xa;"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="20sp"
        />

</LinearLayout>